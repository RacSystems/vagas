Type
  TDAOConexao = class
      private
        FConexao : TFDConnection;

      public
        function getConexao : TFDConnection;

        constructor Create;
    destructor Destroy; override;
  end;


implementation

{TDAOConexao}

{ TDAOConexao }

constructor TDAOConexao.Create;
begin
  inherited Create;

  FConexao := TFDConnection.Create(nil);

  FConexao.Params.DriverID := 'ODBC_CSV';
  FConexao.Params.Database := 'E:\Rac Sistema\vagas\delphi\data';
end;

destructor TDAOConexao.Destroy;
begin
  inherited;

end;

function TDAOConexao.getConexao: TFDConnection;
begin
  result := FConexao;
end;

end.
